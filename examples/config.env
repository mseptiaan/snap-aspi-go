# Application Configuration
APP_ENV=development
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ASPI API Configuration
ASPI_BASE_URL=https://sandbox.bi-sandbox.id
ASPI_CLIENT_ID=your-client-id
ASPI_CLIENT_SECRET=your-client-secret
ASPI_PRIVATE_KEY_PATH=keys/private.pem
ASPI_PUBLIC_KEY_PATH=keys/public.pem

# ASPI Timeouts and Retry Configuration
ASPI_CONNECT_TIMEOUT=10s
ASPI_REQUEST_TIMEOUT=30s
ASPI_MAX_RETRIES=3
ASPI_BACKOFF_DURATION=1s 